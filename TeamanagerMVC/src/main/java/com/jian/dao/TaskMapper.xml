<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jian.dao.TaskDao">
    <!--    id就是方法名字-->
    <!--    Type是类型只有一个，Map是一个list-->

    <select id="getTask" resultMap="taskResultMap">
        select * from task where task_id=#{taskId}
    </select>

    <resultMap id="taskResultMap" type="com.jian.pojo.Task">
        <id property="taskId" column="task_id"/>
        <result property="taskName" column="task_name" />
        <result property="context" column="content"/>
        <result property="deadline" column="deadline"/>
        <result property="teamId" column="team_id"/>
        <result property="startTime" column="start_time" />

    </resultMap>

    <select id="getStudentList" resultMap="studentResultMap">
    select student_id,info,user_icon_src from student where student_id in (select student_id from task_student_link where task_id=#{taskId})
    </select>

    <resultMap id="studentResultMap" type="com.jian.pojo.Student">
        <id property="studentId" column="student_id"/>
        <result property="studentInfo" column="info"/>
        <result property="userIconSrc" column="user_icon_src" />
    </resultMap>

    <insert id="addTask" parameterType="com.jian.pojo.Task" useGeneratedKeys="true" keyColumn="task_id" keyProperty="taskId">
        insert into task(content, deadline, team_id, task_name, start_time, completed) values (#{context},#{deadline},#{teamId},#{taskName},#{startTime},#{completed})
    </insert>

    <insert id="addTaskStudent" >
        insert into task_student_link(student_id, task_id, progress) values  (#{arg1},#{arg0},0)
    </insert>

    <select id="getTaskProgress" resultType="java.lang.Integer">
        select progress from task_student_link where student_id=#{arg1} and task_id=#{arg0}
    </select>
    <select id="getTaskProgressAvg" resultType="java.lang.Integer">
        select AVG(progress) from task_student_link where task_id=#{taskId}
    </select>
</mapper>